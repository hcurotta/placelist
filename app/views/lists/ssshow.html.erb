<p id="notice"><%= notice %></p>

<h2>
  <%= @list.name %>
</h2>
<p>by <%= link_to @list.user.name, @list.user %></p>

<% if @subscriber == true %>
    <p>
    <div class="btn-group">
    <span class="btn btn-success disabled" data-toggle="dropdown"><i class="icon-ok"></i> Subscribed</span>
    <a class="btn btn-success dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
          <%= link_to "Unsubscribe", subscribe_path(:list_id => @list.id), method: "delete"%>
      </ul>
    </div>
    </p>
<% else %>
    <p>
    <%= link_to subscribe_path(:id => @list.id, :name => @list.name), method: "post", class: "btn btn-success" do %>
        <i class="icon-bookmark"></i> Subscribe
        
    <% end unless @owner   %>
    </p>
<% end %>

<p class="lead">
  <%= @list.description %>
</p>

<p class="lead">
  <%= "Great for #{@list.good_for.what} on #{@list.good_on.daystring} #{@list.good_at.timestring.downcase}s when it's #{@list.good_when.weather_is.downcase} outside." %>
</p>

<%= render "venue_search" if @owner %>

<ul class="nav nav-tabs nav-stacked">
<% @list.list_items.each do |list_item| %>
<% venue = list_item.venue %>
	<li><%= link_to venue.name, venue_path(:id => venue.id, :list_id => @list.id, :list_item_id => list_item.id) %> 
	<% end %>
	</li>
</ul>

<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back to Profile', user_path(current_user.id) %>
