<!DOCTYPE html>
<html>
<head>
  <title>TenPlaces</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script>window.scrollTo(0, 1);</script>
  
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
  <meta name="apple-mobile-web-app-capable" content="yes" />
  
</head>
<body>
    
    <div class="navbar">
      <div class="navbar-inner">
          
        <div class="container">

          <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <!-- Be sure to leave the brand out there if you want it shown -->
          <a class="brand" href="/"><i class="icon-map-marker"></i> 10Places</a>


          <!-- Everything you want hidden at 940px or less, place within here -->
          <div class="nav-collapse">
              <ul class="nav">
              <% if current_user %>
              <li><%= link_to user_path(current_user) do %><i class="icon-user"></i> Profile <% end %></li>
              <li><%= link_to user_path(current_user) do %><i class="icon-facebook-sign"></i> Find Friends<% end %></li>
              <li><%= link_to "#" do %><i class="icon-cogs"></i> Settings<% end %></li>
              <li><%= link_to signout_path do %><i class="icon-signout"></i> Sign out<% end %></li>
              <% else %>
              <li><%= link_to "/auth/facebook" do %><i class="icon-signin"></i> Sign in<% end %></li>
              <% end %>
              </ul>
            <!-- .nav, .navbar-search, .navbar-form, etc -->
          </div>

        </div>
      </div>
    </div>
 
 
 
 



<%= yield %>

</body>
</html>
